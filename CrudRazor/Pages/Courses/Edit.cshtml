@page
@model CrudRazor.Pages.Courses.EditModel
@{
}
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Editar Curso</h2>

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Curso.Id" />
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Course.Name"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Course.Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Course.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Course.NumberClasses"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Course.NumberClasses" class="form-control" />
                    </div>
                    <span asp-validation-for="Course.NumberClasses" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Course.Price"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Course.Price" class="form-control" />
                    </div>
                    <span asp-validation-for="Course.Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Editar" class="btn btn-primary form-control">
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-success form-control">Volver a Lista</a>
                    </div>

                </div>
            </div>

        </div>


    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}